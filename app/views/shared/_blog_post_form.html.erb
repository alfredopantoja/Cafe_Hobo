<%= form_for(@blog_post) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>
	<div class="field">
		<%= f.text_field :title, placeholder: "Enter blog title..." %>
	</div>

	<div class="field">	
		<%= f.text_area  :body,  placeholder: "Compose new blog post..." %>
	</div>
	<%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>